---
/**
 * Hero - 히어로 섹션
 * Notion 아이콘 + 타이틀 + 설명
 */
import NotionIcon from './icons/NotionIcon.astro';
---

<section class="hero">
  <!-- Eyebrow -->
  <div class="hero-eyebrow">
    <NotionIcon class="notion-icon" />
    Notion 붙여넣기 최적화
  </div>

  <!-- Title (DM Sans 명시 - 한글 세리프 기울어 보이는 문제 해결) -->
  <h1>PDF 강의자료를<br />마크다운으로 변환</h1>

  <!-- Subtitle -->
  <p class="hero-sub">
    대학 강의 PDF를 이미지 포함 마크다운으로 변환해서<br />
    Notion에 바로 붙여넣으세요.
  </p>
</section>

<style>
  .hero {
    padding: 80px 0 24px;
    text-align: center;
  }

  .hero-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    color: var(--color-gray-700);
    margin-bottom: 20px;
    padding: 4px 12px;
    border: 1px solid var(--color-gray-300);
    border-radius: 100px;
  }

  .hero-eyebrow :global(.notion-icon) {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .hero h1 {
    font-family: 'DM Sans', -apple-system, sans-serif;
    font-size: clamp(36px, 5vw, 52px);
    font-weight: 600;
    line-height: 1.15;
    letter-spacing: -0.03em;
    color: var(--color-black);
    margin-bottom: 16px;
  }

  .hero-sub {
    font-size: 17px;
    color: var(--color-gray-700);
    max-width: 460px;
    margin: 0 auto;
    line-height: 1.5;
    font-weight: 300;
  }

  @media (max-width: 640px) {
    .hero {
      padding: 48px 0 16px;
    }
    .hero h1 {
      font-size: 32px;
    }
  }
</style>
