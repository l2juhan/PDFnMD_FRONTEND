---
/**
 * HowToUse - 사용 방법 섹션
 * 3단계 그리드
 */
const steps = [
  {
    num: '1',
    title: 'PDF 업로드',
    description: '강의 슬라이드나 자료 PDF를 선택하세요. 드래그 앤 드롭도 됩니다.'
  },
  {
    num: '2',
    title: '자동 변환',
    description: '텍스트와 이미지를 추출하고 마크다운으로 변환합니다.'
  },
  {
    num: '3',
    title: 'Notion에 붙여넣기',
    description: '클립보드에 복사 후 Notion에서 Ctrl+V 하면 끝.'
  }
];
---

<section id="how" class="py-16 border-t border-gray-300">
  <p class="text-xs uppercase tracking-widest text-gray-500 mb-3">사용 방법</p>
  <h2 class="font-serif text-[28px] font-normal tracking-tight mb-8">세 단계로 끝납니다</h2>

  <div class="grid grid-cols-3 gap-8 max-sm:grid-cols-1 max-sm:gap-6">
    {steps.map((step) => (
      <div>
        <div class="font-serif text-[32px] font-light text-gray-300 mb-2 leading-none">
          {step.num}
        </div>
        <h3 class="text-[15px] font-semibold mb-1.5">{step.title}</h3>
        <p class="text-sm text-gray-700 leading-relaxed">{step.description}</p>
      </div>
    ))}
  </div>
</section>
