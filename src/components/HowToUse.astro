---
/**
 * HowToUse - 사용 방법 섹션
 * 3단계 그리드
 */
const steps = [
  {
    num: '1',
    title: 'PDF 업로드',
    description: '강의 슬라이드나 자료 PDF를 선택하세요. 드래그 앤 드롭도 됩니다.'
  },
  {
    num: '2',
    title: '자동 변환',
    description: '텍스트와 이미지를 추출하고 마크다운으로 변환합니다.'
  },
  {
    num: '3',
    title: 'Notion에 붙여넣기',
    description: '클립보드에 복사 후 Notion에서 Ctrl+V 하면 끝.'
  }
];
---

<section class="section" id="how">
  <p class="section-label">사용 방법</p>
  <h2 class="section-heading">세 단계로 끝납니다</h2>

  <div class="steps">
    {steps.map((step) => (
      <div class="step">
        <div class="step-num">{step.num}</div>
        <h3>{step.title}</h3>
        <p>{step.description}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .section {
    padding: 64px 0;
  }

  .section-label {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray-500);
    margin-bottom: 12px;
  }

  .section-heading {
    font-family: 'Newsreader', Georgia, serif;
    font-size: 28px;
    font-weight: 400;
    letter-spacing: -0.02em;
    margin-bottom: 32px;
  }

  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .step-num {
    font-family: 'Newsreader', Georgia, serif;
    font-size: 32px;
    font-weight: 300;
    color: var(--color-gray-300);
    margin-bottom: 8px;
    line-height: 1;
  }

  .step h3 {
    font-size: 15px;
    font-weight: 600;
    margin-bottom: 6px;
  }

  .step p {
    font-size: 14px;
    color: var(--color-gray-700);
    line-height: 1.5;
  }

  @media (max-width: 640px) {
    .steps {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }
</style>
